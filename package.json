{
  "name": "@scintilla-network/keys",
  "version": "1.3.0",
  "description": "Key management and derivation library for Scintilla Network",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "require": "./src/index.js",
      "default": "./src/index.js"
    },
    "./utils": {
      "types": "./src/utils/index.d.ts",
      "default": "./src/utils/index.js"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",  
    "test": "litest",
    "test:accountkeyring": "litest src/keyrings/AccountKeyring/AccountKeyring.spec.js",
    "test:e2e": "litest test/e2e/functional.spec.ts",
    "test:chain": "litest src/ChainKeyring/ChainKeyring.spec.js",
    "test:seed": "litest src/SeedKeyring/SeedKeyring.spec.js",
    "test:persona": "litest src/PersonaKeyring/PersonaKeyring.spec.js",
    "test:sharedpersona": "litest src/SharedPersonaKeyring/SharedPersonaKeyring.spec.js",
    "test:extendedkey": "litest src/primitives/ExtendedKey/ExtendedKey.spec.js",
    "test:extendedprivkey": "litest src/primitives/ExtendedPrivateKey/ExtendedPrivateKey.spec.js",
    "test:signablemessage": "litest src/messages/SignableMessage/SignableMessage.spec.js",
    "test:signer": "litest src/messages/Signer/Signer.spec.js",
    "test:extendedpubkey": "litest src/primitives/ExtendedPublicKey/ExtendedPublicKey.spec.js",
    "test:privatekey": "litest src/primitives/PrivateKey/PrivateKey.spec.js",
    "test:publickey": "litest src/primitives/PublicKey/PublicKey.spec.js",
    "test:address": "litest src/primitives/Address/Address.spec.js",
    "test:uint8array": "litest src/utils/uint8array.spec.js",
    "test:varint": "litest src/utils/varint.spec.js",
    "test:varbigint": "litest src/utils/varbigint.spec.js",
    "test:base64": "litest src/utils/base64.spec.js",
    "test:json": "litest src/utils/json.spec.js"
  },
  "repository": {
      "type": "git",
      "url": "git+https://github.com/Scintilla-Network/keys.git"
  },
  "homepage": "https://github.com/Scintilla-Network/keys",
  "bugs": {
      "url": "https://github.com/Scintilla-Network/keys/issues"
  },
  "keywords": [
    "scintilla",
    "keys",
    "keyrings",
    "mnemonic",
    "bip39",
    "derivation",
    "address",
    "privatekey",
    "publickey",
    "extendedkey",
    "extendedprivatekey",
    "extendedpublickey",
    "persona",
    "sharedpersona",
    "chain",
    "account",
    "addresskeyring",
    "personaking",
    "sharedpersonaking"
  ],
  "type": "module",
  "author": "Scintilla Labs",
  "contributors": [
    "Alex Werner <alex@scintilla.network>"
  ],
  "license": "MIT",
  "dependencies": {
    "@scintilla-network/ciphers": "1.2.1",
    "@scintilla-network/hashes": "1.3.1",
    "@scintilla-network/mnemonic": "2.1.0",
    "@scintilla-network/signatures": "1.2.1"
  },
  "devDependencies": {
    "@scintilla-network/litest": "1.3.0"
  }
}
